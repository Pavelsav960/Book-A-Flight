@model IEnumerable<Booking.Models.Payment>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CardHolderName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CardNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExparationMonth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExparationYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SaveDetails)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CardHolderName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CardNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExparationMonth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExparationYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SaveDetails)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdNumber">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdNumber">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdNumber">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>



}
