@model Booking.Models.Payment

@{
    ViewData["Title"] = "Create";
}

<h1>Payment</h1>

@*<h4>Payment</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" required placeholder="Example@gmail.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardHolderName" class="control-label"></label>
                <input asp-for="CardHolderName" class="form-control" maxlength="15" minlength ="3" required placeholder="Example : Bob Dylan" />
                <span asp-validation-for="CardHolderName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardNumber" class="control-label"></label>
                <input asp-for="CardNumber" class="form-control" minlength="16" maxlength="16" required placeholder="Example : 5997 5997 5997 5997" />
                <span asp-validation-for="CardNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExparationMonth" class="control-label"></label>
                <input asp-for="ExparationMonth" class="form-control" minlength="2" maxlength="2"  required placeholder="Example : 09" />
                <span asp-validation-for="ExparationMonth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExparationYear" class="control-label"></label>
                <input asp-for="ExparationYear" class="form-control" minlength="4" maxlength="4" required placeholder="Example : 2027" />
                <span asp-validation-for="ExparationYear" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="SaveDetails" /> @Html.DisplayNameFor(model => model.SaveDetails)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Pay Now" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

