@model Booking.Models.Payment

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Payment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CardHolderFirstName" class="control-label"></label>
                <input asp-for="CardHolderFirstName" class="form-control" />
                <span asp-validation-for="CardHolderFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardHolderLastName" class="control-label"></label>
                <input asp-for="CardHolderLastName" class="form-control" />
                <span asp-validation-for="CardHolderLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardNumber" class="control-label"></label>
                <input asp-for="CardNumber" class="form-control" />
                <span asp-validation-for="CardNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExparationMonth" class="control-label"></label>
                <input asp-for="ExparationMonth" class="form-control" />
                <span asp-validation-for="ExparationMonth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExparationYear" class="control-label"></label>
                <input asp-for="ExparationYear" class="form-control" />
                <span asp-validation-for="ExparationYear" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="SaveDetails" /> @Html.DisplayNameFor(model => model.SaveDetails)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Pay Now" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
